        .leave {
            flex-flow: column-reverse;
        }

        .btnleave {
            display: flex;
            justify-content: space-between;
        }
    }

    .leaveappzove {
        display: flex;
        justify-content: space-between;
    }

    .applybutton {
        height: fit-content;
    }

    .mud-card-content {
        padding: 0px;
    }

    .progressstyle {
        padding-top: 1px;
        font-size: 12px;
        padding-bottom: 10px;
    }

    .piechart {
        height: 110px;
    }

